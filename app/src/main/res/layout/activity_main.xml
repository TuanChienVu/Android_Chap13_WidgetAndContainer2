<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvChronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp"
        android:text="Chronometer Demo"
        android:textColor="#FF0000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnStop"
        android:text="Start" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvChronometer"
        android:text="Stop" />

    <Button
        android:id="@+id/btnReStart"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnStart"
        android:layout_alignStart="@+id/btnStart"
        android:layout_below="@+id/btnStart"
        android:text="Restart" />

    <Button
        android:id="@+id/btnSet"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnClear"
        android:layout_alignLeft="@+id/btnStop"
        android:layout_alignStart="@+id/btnStop"
        android:text="Set Format" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnReStart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Clear Format" />

    <Chronometer
        android:id="@+id/chronometerShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvChronometer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />


</RelativeLayout>